doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(href='css/main.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/css?family=Roboto&display=swap', rel='stylesheet')
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		title Tasker
	body
		h1 Tasker
		.wrapper
			.card
				.card_title 
					span.material-icons mic_none
					| Voice Notes
				.card_content.color-primary
					button#recordBtn.btnRecord(value=0) Record
					audio#player
					table#recordings(width='100%')
						tr
							th(colspan=4) Recordings
					span#moreOnServer.material-icons
					button#syncBtn.btnSmall Sync to server
			.card
				.card_title 
					span.material-icons vpn_lock
					| VPN Status
				.card_content.color-primary
					#vpnStatus.status
					#vpnStatusDate
			.card.nodisplay
				.card_title Banggood Points
				.card_content.color-primary
					#checkinPoints.status
					#checkinPointsDate
			.card
				.card_title 
					span.material-icons network_check
					| Network Snapshot
				.card_content.color-primary
					a(href='images/latest.png') Latest
					#snapshotDate
					button.btnBig(onclick='triggerSnapshot()') Take Snapshot
			.card
				.card_title 
					span.material-icons account_balance
					| Stock Watch
				.card_content.color-primary
					label(for='stock') Stock:&nbsp
					input#stock(size='4')
					.col2
						.right Watch Price: 
						span#watchPrice.left
						.right Current Price: 
						span#currentPrice.left
						.right Change: 
						span#change.left
					button.btnBig(onclick='getQuote()') Get Quote
		#deleteModal.modal 
			.modal-content
				p Please confirm you want to delete?
				.btn-group
					button#deleteCancel.btnSmall Cancel
					button#deleteConfirm.btnSmall Confirm
		script(src='js/bundle.js')